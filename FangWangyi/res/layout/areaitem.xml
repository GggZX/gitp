<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <ImageView 
        android:id="@+id/area_item_im"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/biz_navigation_tab_news"
        />
    <TextView 
        android:id="@+id/area_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/area_item_im"
        android:layout_alignTop="@id/area_item_im"
        android:text="sda"/>
    <WebView 
        android:id="@+id/area_item_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/area_item_im"
        android:layout_below="@id/area_item_title"
        android:text="ads"
        />
    <TextView 
        android:id="@+id/area_item_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/area_item_im"
        android:layout_below="@id/area_item_desc"
        android:text="dsadd"
        />

</RelativeLayout>

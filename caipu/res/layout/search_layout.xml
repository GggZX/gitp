<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#87CEEB"
        android:padding="5dp" >

        <ImageButton
            android:id="@+id/search_finish"
            android:layout_width="40dp"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:background="@null"
            android:src="@drawable/back_btn" />

        <EditText
            android:id="@+id/home_edittext_search2"
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/app_list_as"
            android:hint="搜索菜谱、食材"
            android:paddingLeft="5dp"
            android:textSize="15sp" />

        <ImageButton
            android:id="@+id/home_imagebutton_login2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_recipe_add_comment_selected" />
    </RelativeLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="搜索历史"
        android:textSize="18sp" />

    <ListView
        android:id="@+id/search_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:divider="@drawable/listview_diveder_02"
        android:listSelector="#ff6600" >
    </ListView>

    <Button
        android:id="@+id/btn_clearSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_cge"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="清空搜索历史" />

</LinearLayout>